# ====== CONFIGURATION ======
$ScreenOffAC = 10    # Minutes before screen turns off on AC power
$ScreenOffDC = 5     # Minutes before screen turns off on battery
$SleepAC = 15        # Minutes before sleep on AC power
$SleepDC = 10        # Minutes before sleep on battery

# ====== SCRIPT ======
Write-Output "Setting screen and sleep timeouts..."

# Screen off timeout
powercfg /change monitor-timeout-ac $ScreenOffAC
powercfg /change monitor-timeout-dc $ScreenOffDC

# Sleep timeout
powercfg /change standby-timeout-ac $SleepAC
powercfg /change standby-timeout-dc $SleepDC

Write-Output "Screen off timeout set to $ScreenOffAC min (AC) / $ScreenOffDC min (DC)"
Write-Output "Sleep timeout set to $SleepAC min (AC) / $SleepDC min (DC)"
